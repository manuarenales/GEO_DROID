        public StringBuilder BufferHex
        {
            get 
            {
                StringBuilder sb = new StringBuilder();

                int len = 0;
                if (_buffer != null)
                    len = _buffer.Length;
                byte[] caracteres = new byte[len];
                for (int i = 0; i < len; i++)
                {
                    caracteres[i] = (byte)_buffer[i];
                    if (caracteres[i] < 16)
                        sb.Append("0");
                    sb.Append(caracteres[i].ToString("x").ToUpper());
                }
                return sb; 
            }
        }

        public long this[Contador contador]
